<h1 class="text-center mt-4"> Listing All Images </h1>
<div class="container">
  <div class="row justify-content-md-center">
    <table class="table caption-top ">
      <caption>List of Docker Images</caption>
      <thead class="table-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Size</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @images.each do |image| %>
          <tr>
            <td><%= image["RepoTags"][0] %></td>
            <td><%= number_to_human_size(image["Size"].to_f) %></td>

            <td><%= link_to 'Delete', image_path(image["Id"]), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>