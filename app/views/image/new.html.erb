<h1 class="text-center mt-4"> Pull Image </h1>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10">
            <%= form_with(url: "/image", method: "post", class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
                <div class="input-group row mb-3">
                    <%= f.label :Name, class: "col-2 col-form-label text-white"%>
                    <div class="col-10">
                        <%= f.text_field :repo, class: "form-control shadow rounded", placeholder: "Name of docker image" %>
                    </div>
                </div>

                <div class="input-group row mb-3">
                    <%= f.label :Tag, class: "col-2 col-form-label text-white"%>
                    <div class="col-10">
                        <%= f.text_field :tag, class: "form-control shadow rounded", placeholder: "Tag of docker image" %>
                    </div>
                </div>

                <div class="input-group justify-content-center">
                    <%= f.submit "Pull", class: "btn btn-outline-success btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>